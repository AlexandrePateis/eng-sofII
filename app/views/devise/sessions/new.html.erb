<h2 class="text-center mt-3">Entrar</h2>
<div class="row-my-login border bg-light rounded p-5 mt-2">

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="form-group mt-2">
    <%= f.label :email, class: 'fw-bold' %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "off", class: 'form-control'  %>
  </div>

  <div class="form-group mt-2">
    <%= f.label :password,"Senha", class: 'fw-bold' %><br />
    <%= f.password_field :password, autocomplete: "current-password", class: 'form-control'  %>
  </div>

  <% if devise_mapping.rememberable? %>
  <div class="form-group mt-2">
      <%= f.check_box :remember_me, class: "form-check-input" %>
      <%= f.label :remember_me, "Lembrar-me" %>
    </div>
  <% end %>

  <div class="actions">
    <%= f.submit "Entrar", class: "btn btn-primary" %>
  </div>
<% end %>
<%= render "devise/shared/links" %>
</div>

