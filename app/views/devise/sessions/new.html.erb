<h2 class="text-center mt-3">Log in</h2>
<div class="row-my-login border p-5 bh-light">

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="form-group">
    <%= f.label :email, class: 'fw-bold' %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "off", class: 'form-control'  %>
  </div>

  <div class="form-group">
    <%= f.label :password, class: 'fw-bold' %><br />
    <%= f.password_field :password, autocomplete: "current-password", class: 'form-control'  %>
  </div>

  <% if devise_mapping.rememberable? %>
  <div class="form-group">
      <%= f.check_box :remember_me, class: "form-check-input" %>
      <%= f.label :remember_me %>
    </div>
  <% end %>

  <div class="actions">
    <%= f.submit "Log in", class: "btn btn-primary" %>
  </div>
<% end %>
<%= render "devise/shared/links" %>
</div>

