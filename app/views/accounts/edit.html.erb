<%= form_tag withdraw_account_path(@account), method: :post do %>
  <%= label_tag :withdraw_amount, 'Sacar:' %>
  <%= number_field_tag :withdraw_amount %>
  <%= submit_tag 'Sacar' %>
<% end %>

<%= form_tag deposit_account_path(@account), method: :post do %>
  <%= label_tag :deposit_amount, 'Depositar:' %>
  <%= number_field_tag :deposit_amount %>
  <%= submit_tag 'Depositar' %>
<% end %>
