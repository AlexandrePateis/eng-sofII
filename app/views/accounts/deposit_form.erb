<h1 class="text-center mt-3">Deposito</h1>

<%= form_tag deposit_account_path(@account), method: :post do %>
  <div class="d-flex flex-column my-class border p-5 gap-3 bg-light rounded p-5 mt-5">
    <%= label_tag :deposit_amount, 'Digite o valor que serÃ¡ depositado', class: "fw-bold" %>
    <%= number_field_tag :deposit_amount, nil, step: "0.01", class: "form-control", required: true, pattern: "\d+(\.\d{1,2})?" %>
     <div class="d-flex gap-3 justify-content-center">
      <%= submit_tag 'Depostiar', class: "btn btn-success" %>
      <%= link_to "Voltar", account_path(@account), class: "btn btn-secondary" %>
    </div>
  </div>
<% end %>
